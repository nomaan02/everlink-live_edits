<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#E0BFB8">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- comment -%} Page Title {%- endcomment -%}
    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {%- comment -%} Page Description {%- endcomment -%}
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {%- comment -%} Open Graph / Social Meta Tags {%- endcomment -%}
    <meta property="og:site_name" content="{{ shop.name }}">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:title" content="{{ page_title | default: shop.name }}">
    <meta property="og:type" content="website">
    <meta property="og:description" content="{{ page_description | default: shop.description | escape }}">

    {%- if page_image -%}
      <meta property="og:image" content="https:{{ page_image | image_url: width: 1200 }}">
      <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200 }}">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="630">
    {%- endif -%}

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ page_title | default: shop.name }}">
    <meta name="twitter:description" content="{{ page_description | default: shop.description | escape }}">

    {%- comment -%} Google Fonts for Luxury Typography {%- endcomment -%}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    {%- comment -%} Shopify Required Header Content {%- endcomment -%}
    {{ content_for_header }}

    {%- comment -%} Theme Stylesheet {%- endcomment -%}
    {{ 'theme.css' | asset_url | stylesheet_tag }}

    {%- comment -%} Modernizr for no-js fallback {%- endcomment -%}
    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>
  </head>

  <body class="template-{{ template.name }}">
    <a class="skip-to-content-link" href="#main-content">
      Skip to content
    </a>

    {%- comment -%} Main Content Area {%- endcomment -%}
    {{ content_for_layout }}

    {%- comment -%} Theme JavaScript {%- endcomment -%}
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
  </body>
</html>
