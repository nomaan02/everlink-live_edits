        {% endif %}

        {% if block.settings.link_3_text != blank %}
          <li class="ai-glass-navbar-menu-item-{{ ai_gen_id }}">
            <a href="{{ block.settings.link_3_url }}" class="ai-glass-navbar-link-{{ ai_gen_id }}">
              {{ block.settings.link_3_text }}
            </a>
