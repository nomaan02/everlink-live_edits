{% doc %}
  @prompt
    Create a customizable image overlay block with the following features:
    - Upload field for a PNG/WebP image with alpha transparency support
    - Position controls: X and Y offset sliders (in pixels or percentage) to freely move the image anywhere on the section
    - Size controls: width and height sliders to resize the image independently
    - CSS positioning: absolute positioning with high z-index (z-index: 10 or higher) to ensure it appears above hero images, text, titles, and CTAs
    - The overlay should maintain image quality and transparency
    - Include range inputs for: horizontal position (0-100%), vertical position (0-100%), width (50-500px), and height (50-500px)
    - The block should be non-interactive (pointer-events: none) so clicks pass through to elements below
    - Add optional opacity control slider for fine-tuning the overlay effect, make sure it appears over the top of the title text and cta and give me the option to make it larger
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.position_y }}%;
    left: {{ block.settings.position_x }}%;
    width: {{ block.settings.overlay_width }}px;
    height: {{ block.settings.overlay_height }}px;
    z-index: 999;
    pointer-events: none;
    transform: translate(-50%, -50%);
  }

  .ai-image-overlay__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: {{ block.settings.opacity }};
  }

  .ai-image-overlay__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.05);
    border: 2px dashed rgba(0, 0, 0, 0.2);
    border-radius: 8px;
  }

  .ai-image-overlay__empty-state-{{ ai_gen_id }} {
    padding: 20px;
    text-align: center;
    color: #666;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-image-overlay-{{ ai_gen_id }} {
      width: {{ block.settings.overlay_width | times: 0.7 }}px;
      height: {{ block.settings.overlay_height | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-image-overlay-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.overlay_image %}
    <img
      src="{{ block.settings.overlay_image | image_url: width: 2000 }}"
      alt="{{ block.settings.overlay_image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.overlay_image.width }}"
      height="{{ block.settings.overlay_image.height }}"
      class="ai-image-overlay__image-{{ ai_gen_id }}"
    >
  {% else %}
    <div class="ai-image-overlay__placeholder-{{ ai_gen_id }}">
      <div class="ai-image-overlay__empty-state-{{ ai_gen_id }}">
        Upload a PNG or WebP image with transparency
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image overlay",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "overlay_image",
      "label": "Overlay image",
      "info": "Upload PNG or WebP with alpha transparency"
    },
    {
      "type": "header",
      "content": "Position"
    },
    {
      "type": "range",
      "id": "position_x",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Horizontal position",
      "default": 50,
      "info": "0% = left edge, 50% = center, 100% = right edge"
    },
    {
      "type": "range",
      "id": "position_y",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Vertical position",
      "default": 50,
      "info": "0% = top edge, 50% = center, 100% = bottom edge"
    },
    {
      "type": "header",
      "content": "Size"
    },
    {
      "type": "range",
      "id": "overlay_width",
      "min": 50,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Width",
      "default": 200
    },
    {
      "type": "range",
      "id": "overlay_height",
      "min": 50,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Height",
      "default": 200
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "range",
      "id": "opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Opacity",
      "default": 1,
      "info": "0 = fully transparent, 1 = fully opaque"
    }
  ],
  "presets": [
    {
      "name": "Image overlay"
    }
  ]
}
{% endschema %}
