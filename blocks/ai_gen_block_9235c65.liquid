{% doc %}
  @prompt
    Create a centered navigation header with a glassmorphism effect. The navigation bar should have a semi-transparent background with a frosted glass appearance (backdrop blur), be horizontally centered on the page, and contain navigation menu items. The design should be minimal and clean with no additional elements in the header area. Include subtle border and shadow effects to enhance the glass morphism aesthetic., i want it to sit on top of my hero image and for the section to have a fully transparent background so that the nav bar sits on top of the hero banner
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glass-nav-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.vertical_padding }}px 0;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    background: transparent;
  }

  .ai-glass-nav-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.nav_width }}px;
    margin: 0 auto;
    background: {{ block.settings.background_color }};
    backdrop-filter: blur({{ block.settings.blur_amount }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_amount }}px);
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    padding: {{ block.settings.nav_padding_vertical }}px {{ block.settings.nav_padding_horizontal }}px;
  }

  .ai-glass-nav-menu-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block.settings.menu_gap }}px;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }

  .ai-glass-nav-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-glass-nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
    display: block;
    transition: all 0.3s ease;
    border-radius: {{ block.settings.link_border_radius }}px;
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-glass-nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    background: {{ block.settings.link_hover_bg }};
  }

  @media screen and (max-width: 749px) {
    .ai-glass-nav-container-{{ ai_gen_id }} {
      max-width: calc(100% - 32px);
      margin: 0 16px;
    }

    .ai-glass-nav-menu-{{ ai_gen_id }} {
      gap: {{ block.settings.menu_gap | divided_by: 2 }}px;
    }

    .ai-glass-nav-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
      padding: {{ block.settings.link_padding_vertical | times: 0.8 }}px {{ block.settings.link_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<nav class="ai-glass-nav-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-glass-nav-container-{{ ai_gen_id }}">
    <ul class="ai-glass-nav-menu-{{ ai_gen_id }}">
      {% if block.settings.menu_link_1_text != blank %}
        <li class="ai-glass-nav-item-{{ ai_gen_id }}">
          <a href="{{ block.settings.menu_link_1_url }}" class="ai-glass-nav-link-{{ ai_gen_id }}">
            {{ block.settings.menu_link_1_text }}
          </a>
        </li>
      {% endif %}
      
      {% if block.settings.menu_link_2_text != blank %}
        <li class="ai-glass-nav-item-{{ ai_gen_id }}">
          <a href="{{ block.settings.menu_link_2_url }}" class="ai-glass-nav-link-{{ ai_gen_id }}">
            {{ block.settings.menu_link_2_text }}
          </a>
        </li>
      {% endif %}
      
      {% if block.settings.menu_link_3_text != blank %}
        <li class="ai-glass-nav-item-{{ ai_gen_id }}">
          <a href="{{ block.settings.menu_link_3_url }}" class="ai-glass-nav-link-{{ ai_gen_id }}">
            {{ block.settings.menu_link_3_text }}
          </a>
        </li>
      {% endif %}
      
      {% if block.settings.menu_link_4_text != blank %}
        <li class="ai-glass-nav-item-{{ ai_gen_id }}">
          <a href="{{ block.settings.menu_link_4_url }}" class="ai-glass-nav-link-{{ ai_gen_id }}">
            {{ block.settings.menu_link_4_text }}
          </a>
        </li>
      {% endif %}
      
      {% if block.settings.menu_link_5_text != blank %}
        <li class="ai-glass-nav-item-{{ ai_gen_id }}">
          <a href="{{ block.settings.menu_link_5_url }}" class="ai-glass-nav-link-{{ ai_gen_id }}">
            {{ block.settings.menu_link_5_text }}
          </a>
        </li>
      {% endif %}
      
      {% if block.settings.menu_link_6_text != blank %}
        <li class="ai-glass-nav-item-{{ ai_gen_id }}">
          <a href="{{ block.settings.menu_link_6_url }}" class="ai-glass-nav-link-{{ ai_gen_id }}">
            {{ block.settings.menu_link_6_text }}
          </a>
        </li>
      {% endif %}
    </ul>
  </div>
</nav>

