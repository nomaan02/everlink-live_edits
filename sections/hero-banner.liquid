{%- liquid
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
  assign alignment_class = 'hero__content--' | append: section.settings.content_alignment

  # Image positioning
  assign image_position_x = section.settings.image_position_x
  assign image_position_y = section.settings.image_position_y
  assign image_size = section.settings.image_size

  # Text positioning
  assign heading_v_position = section.settings.heading_vertical_position
  assign heading_h_position = section.settings.heading_horizontal_position
  assign heading_font_size = section.settings.heading_font_size

  # Layout spacing
  assign section_height = section.settings.section_height
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_left = section.settings.padding_left
  assign padding_right = section.settings.padding_right
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom

  # Advanced positioning
  assign z_index = section.settings.z_index
  assign transform_x = section.settings.transform_x
  assign transform_y = section.settings.transform_y
-%}

<style>
  #hero-{{ section.id }} {
    min-height: {{ section_height }}px;
    margin-top: {{ margin_top }}px;
    margin-bottom: {{ margin_bottom }}px;
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    padding-left: {{ padding_left }}px;
    padding-right: {{ padding_right }}px;
    position: relative;
    z-index: {{ z_index }};

    {%- if section.settings.hero_background_image != blank -%}
      background-image: url('{{ section.settings.hero_background_image | image_url: width: 1920 }}');
      background-size: {{ image_size }};
      background-position: {{ image_position_x }} {{ image_position_y }};
      background-repeat: no-repeat;
      {%- if section.settings.background_attachment == 'fixed' -%}
        background-attachment: fixed;
      {%- endif -%}
    {%- endif -%}
  }

  {%- if section.settings.mobile_background_image != blank -%}
    @media (max-width: 768px) {
      #hero-{{ section.id }} {
        background-image: url('{{ section.settings.mobile_background_image | image_url: width: 768 }}');
      }
    }
  {%- endif -%}

  #hero-{{ section.id }} .hero__overlay {
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ overlay_opacity }};
  }

  #hero-{{ section.id }} .hero__content {
    max-width: {{ section.settings.content_width }};
    {% if section.settings.content_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% elsif section.settings.content_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
    text-align: {{ section.settings.text_alignment }};
  }

  #hero-{{ section.id }} .hero__headline {
    color: {{ section.settings.headline_color }};
    font-size: {{ heading_font_size }}px;
    position: relative;
    top: {{ heading_v_position }}%;
    left: {{ heading_h_position }}%;
    transform: translate({{ transform_x }}px, {{ transform_y }}px);

    {%- if section.settings.text_shadow -%}
      text-shadow: 0 2px {{ section.settings.text_shadow_intensity }}px rgba(0, 0, 0, 0.3);
    {%- endif -%}
  }

  #hero-{{ section.id }} .hero__subheadline {
    color: {{ section.settings.subheadline_color }};
    font-size: {{ section.settings.subheading_font_size }}px;
    text-align: {{ section.settings.subheading_alignment }};
    position: relative;
    top: {{ section.settings.subheading_vertical_position }}%;
    left: {{ section.settings.subheading_horizontal_position }}%;

    {%- if section.settings.text_shadow -%}
      text-shadow: 0 2px {{ section.settings.text_shadow_intensity }}px rgba(0, 0, 0, 0.3);
    {%- endif -%}
  }

  #hero-{{ section.id }} .btn-primary {
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    position: relative;
    top: {{ section.settings.button_vertical_position }}%;
    left: {{ section.settings.button_horizontal_position }}%;

    {% if section.settings.button_style == 'secondary' %}
      background-color: transparent;
      border: 2px solid {{ section.settings.button_bg_color }};
      color: {{ section.settings.button_bg_color }};
    {% elsif section.settings.button_style == 'outline' %}
      background-color: transparent;
      border: 1px solid {{ section.settings.button_text_color }};
    {% elsif section.settings.button_style == 'text' %}
      background-color: transparent;
      border: none;
      text-decoration: underline;
    {% endif %}
  }

  #hero-{{ section.id }} .btn-primary:hover {
    background-color: {{ section.settings.button_bg_color | color_darken: 10 }};
    transform: scale({{ section.settings.button_hover_scale | divided_by: 100.0 }}) translateY(-2px);
  }

  #hero-{{ section.id }} .hero__scroll-indicator {
    color: {{ section.settings.headline_color }};
  }

  {%- if section.settings.hide_on_mobile -%}
    @media (max-width: 768px) {
      #hero-{{ section.id }} {
        display: none;
      }
    }
  {%- endif -%}

  {%- if section.settings.hide_on_desktop -%}
    @media (min-width: 769px) {
      #hero-{{ section.id }} {
        display: none;
      }
    }
  {%- endif -%}

  {%- comment -%} Mobile Responsive Overrides {%- endcomment -%}
  @media (max-width: 768px) {
    #hero-{{ section.id }} {
      {%- if section.settings.mobile_padding_top != blank -%}
        padding-top: {{ section.settings.mobile_padding_top }}px;
      {%- endif -%}
      {%- if section.settings.mobile_padding_bottom != blank -%}
        padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      {%- endif -%}
      {%- if section.settings.mobile_padding_left != blank -%}
        padding-left: {{ section.settings.mobile_padding_left }}px;
      {%- endif -%}
      {%- if section.settings.mobile_padding_right != blank -%}
        padding-right: {{ section.settings.mobile_padding_right }}px;
      {%- endif -%}
    }

    #hero-{{ section.id }} .hero__content {
      text-align: {{ section.settings.mobile_text_alignment }};
    }

    #hero-{{ section.id }} .hero__headline {
      font-size: {{ section.settings.mobile_heading_font_size }}px;
    }
  }

  {%- if section.settings.custom_css != blank -%}
    {{ section.settings.custom_css }}
  {%- endif -%}
</style>

<section id="hero-{{ section.id }}" class="hero section {{ section.settings.custom_class }}" data-section-id="{{ section.id }}" data-section-type="hero-banner">
  {%- if section.settings.show_overlay -%}
    <div class="hero__overlay"></div>
  {%- endif -%}

  <div class="container" style="max-width: {{ section.settings.container_width }};">
    <div class="hero__content {{ alignment_class }}">
      {%- if section.settings.headline_text != blank -%}
        <h1 class="hero__headline">
          {{ section.settings.headline_text }}
        </h1>
      {%- endif -%}

      {%- if section.settings.subheadline_text != blank -%}
        <p class="hero__subheadline">
          {{ section.settings.subheadline_text }}
        </p>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_url | default: '#' }}" class="btn btn-primary">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero__scroll-indicator">
      <span class="hero__scroll-text">{{ section.settings.scroll_text }}</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  {%- endif -%}
</section>

