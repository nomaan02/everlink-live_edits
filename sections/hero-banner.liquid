{%- liquid
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<style>
  #hero-{{ section.id }} {
    min-height: {{ section.settings.section_height }}px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;

    {%- if section.settings.hero_image != blank -%}
      background-image: url('{{ section.settings.hero_image | image_url: width: 1920 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {%- endif -%}
  }

  #hero-{{ section.id }} .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ overlay_opacity }};
  }

  #hero-{{ section.id }} .hero__content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: 40px 20px;
  }

  #hero-{{ section.id }} .hero__title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    margin-bottom: 20px;
  }

  #hero-{{ section.id }} .hero__text {
    color: {{ section.settings.text_color }};
    font-size: 18px;
    margin-bottom: 30px;
  }

  #hero-{{ section.id }} .hero__button {
    background-color: {{ section.settings.button_color }};
    color: #FFFFFF;
    padding: 15px 40px;
    text-decoration: none;
    display: inline-block;
    border-radius: 4px;
    transition: opacity 0.3s ease;
  }

  #hero-{{ section.id }} .hero__button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    #hero-{{ section.id }} .hero__title {
      font-size: 32px;
    }
  }
</style>

<section id="hero-{{ section.id }}" class="hero section" data-section-id="{{ section.id }}" data-section-type="hero-banner">
  {%- if section.settings.show_overlay -%}
    <div class="hero__overlay"></div>
  {%- endif -%}

  <div class="hero__content">
    {%- if section.settings.title != blank -%}
      <h1 class="hero__title">
        {{ section.settings.title }}
      </h1>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <p class="hero__text">
        {{ section.settings.text }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_text != blank -%}
      <a href="{{ section.settings.button_url | default: '#' }}" class="hero__button">
        {{ section.settings.button_text }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Where Memories Meet Elegance"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Subheading",
      "default": "Timeless jewelry with invisible technology"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "range",
      "id": "section_height",
      "label": "Section height",
      "min": 400,
      "max": 800,
      "step": 50,
      "default": 600,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title size",
      "min": 30,
      "max": 70,
      "step": 5,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 70,
      "step": 10,
      "default": 30,
      "unit": "%"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#E0BFB8"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
