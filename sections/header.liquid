{%- liquid
  assign sticky_class = ''
  if section.settings.sticky_header
    assign sticky_class = 'header--sticky'
  endif

  assign logo_width = section.settings.logo_width
  assign bg_opacity = section.settings.header_bg_opacity | divided_by: 100.0
-%}

<style>
  .header {
    background-color: {{ section.settings.header_bg_color }};
    opacity: {{ bg_opacity }};
    color: {{ section.settings.text_color }};
  }

  .header__logo img {
    width: {{ logo_width }}px;
    height: auto;
  }

  .header__nav a {
    color: {{ section.settings.text_color }};
  }
</style>

<header class="header {{ sticky_class }}" data-section-id="{{ section.id }}" data-section-type="header">
  <div class="container">
    <div class="header__inner">
      {%- comment -%} Logo {%- endcomment -%}
      <div class="header__logo">
        <a href="{{ routes.root_url }}" title="{{ shop.name }}">
          {%- if section.settings.logo_image != blank -%}
            <img
              src="{{ section.settings.logo_image | image_url: width: logo_width }}"
              srcset="
                {{ section.settings.logo_image | image_url: width: logo_width }} 1x,
                {{ section.settings.logo_image | image_url: width: logo_width, scale: 2 }} 2x
              "
              alt="{{ shop.name }}"
              loading="lazy"
              width="{{ logo_width }}"
              height="auto"
            >
          {%- else -%}
            <span class="header__logo-text">{{ section.settings.logo_text }}</span>
          {%- endif -%}
        </a>
      </div>

      {%- comment -%} Navigation {%- endcomment -%}
      <nav class="header__nav" role="navigation">
        <ul>
          {%- if section.settings.nav_link_1_text != blank -%}
            <li>
              <a href="{{ section.settings.nav_link_1_url | default: '#' }}">
                {{ section.settings.nav_link_1_text }}
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.nav_link_2_text != blank -%}
            <li>
              <a href="{{ section.settings.nav_link_2_url | default: '#' }}">
                {{ section.settings.nav_link_2_text }}
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.nav_link_3_text != blank -%}
            <li>
              <a href="{{ section.settings.nav_link_3_url | default: '#' }}">
                {{ section.settings.nav_link_3_text }}
              </a>
            </li>
          {%- endif -%}

          {%- if section.settings.nav_link_4_text != blank -%}
            <li>
              <a href="{{ section.settings.nav_link_4_url | default: '#' }}">
                {{ section.settings.nav_link_4_text }}
              </a>
            </li>
          {%- endif -%}
        </ul>
      </nav>

      {%- comment -%} Mobile Menu Toggle {%- endcomment -%}
      <button class="header__menu-toggle" aria-label="Toggle menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image",
      "info": "Recommended size: 300x100px"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text (if no image)",
      "default": "Everlink"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 80,
      "max": 250,
      "step": 10,
      "unit": "px",
      "label": "Logo Width",
      "default": 150
    },
    {
      "type": "header",
      "content": "Navigation Links"
    },
    {
      "type": "text",
      "id": "nav_link_1_text",
      "label": "Navigation Link 1 Text",
      "default": "Our Story"
    },
    {
      "type": "url",
      "id": "nav_link_1_url",
      "label": "Navigation Link 1 URL"
    },
    {
      "type": "text",
      "id": "nav_link_2_text",
      "label": "Navigation Link 2 Text",
      "default": "Collections"
    },
    {
      "type": "url",
      "id": "nav_link_2_url",
      "label": "Navigation Link 2 URL"
    },
    {
      "type": "text",
      "id": "nav_link_3_text",
      "label": "Navigation Link 3 Text",
      "default": "How it Works"
    },
    {
      "type": "url",
      "id": "nav_link_3_url",
      "label": "Navigation Link 3 URL"
    },
    {
      "type": "text",
      "id": "nav_link_4_text",
      "label": "Navigation Link 4 Text",
      "default": "Contact"
    },
    {
      "type": "url",
      "id": "nav_link_4_url",
      "label": "Navigation Link 4 URL"
    },
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Sticky Header",
      "default": true
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "header_bg_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Background Opacity",
      "default": 95
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#2C2C2C"
    }
  ]
}
{% endschema %}
