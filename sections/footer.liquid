<style>
  #footer-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  #footer-{{ section.id }} a {
    color: {{ section.settings.text_color }};
  }

  #footer-{{ section.id }} a:hover {
    opacity: 0.7;
  }
</style>

<footer id="footer-{{ section.id }}" class="footer" data-section-id="{{ section.id }}" data-section-type="footer">
  <div class="container">
    <div class="footer__main">
      {%- comment -%} Brand Column {%- endcomment -%}
      <div class="footer__column">
        {%- if section.settings.footer_logo != blank -%}
          <img
            src="{{ section.settings.footer_logo | image_url: width: 200 }}"
            srcset="
              {{ section.settings.footer_logo | image_url: width: 100 }} 1x,
              {{ section.settings.footer_logo | image_url: width: 200 }} 2x
            "
            alt="{{ shop.name }}"
            loading="lazy"
            width="150"
            height="auto"
            class="footer__logo"
          >
        {%- else -%}
          <span class="footer__logo-text">{{ shop.name }}</span>
        {%- endif -%}

        {%- if section.settings.brand_description != blank -%}
          <p class="footer__description">{{ section.settings.brand_description }}</p>
        {%- endif -%}

        {%- comment -%} Social Media Links {%- endcomment -%}
        <div class="footer__social">
          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              <svg class="footer__social-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" fill="currentColor"/>
              </svg>
            </a>
          {%- endif -%}

          {%- if section.settings.facebook_url != blank -%}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              <svg class="footer__social-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" fill="currentColor"/>
              </svg>
            </a>
          {%- endif -%}

          {%- if section.settings.pinterest_url != blank -%}
            <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener noreferrer" aria-label="Pinterest">
              <svg class="footer__social-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z" fill="currentColor"/>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Quick Links Column {%- endcomment -%}
      {%- if linklists[section.settings.footer_menu_1] != blank -%}
        <div class="footer__column">
          <h3 class="footer__column-title">{{ linklists[section.settings.footer_menu_1].title }}</h3>
          <ul class="footer__menu">
            {%- for link in linklists[section.settings.footer_menu_1].links -%}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      {%- comment -%} Customer Care Column {%- endcomment -%}
      {%- if linklists[section.settings.footer_menu_2] != blank -%}
        <div class="footer__column">
          <h3 class="footer__column-title">{{ linklists[section.settings.footer_menu_2].title }}</h3>
          <ul class="footer__menu">
            {%- for link in linklists[section.settings.footer_menu_2].links -%}
              <li>
                <a href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Bottom Bar {%- endcomment -%}
    <div class="footer__bottom">
      {%- if section.settings.copyright_text != blank -%}
        <p>{{ section.settings.copyright_text }}</p>
      {%- else -%}
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      {%- endif -%}

      {%- if shop.enabled_payment_types.size > 0 -%}
        <div class="footer__payment-icons">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

